{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "commonJS",
        "lib": ["es6", "es2015", "es2016", "es2017", "es2019", "es2020"],
        "target": "ES5",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,

      },
      "include": ["src/**/*.ts", "tests/**/*.ts"],
      "exclude": [
        "node_modules"
      ],
      "typeRoots": [
        "./src",
        "./test"
      ]
}